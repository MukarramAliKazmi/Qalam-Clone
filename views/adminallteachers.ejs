                            <tr>
                                <th><b>Teacher ID</b></th>
                                <th><b>Name</b></th>
                                <th><b>Email</b></th>
                                <th><b>Password</b></th>
                                <!-- <th><b>Course Name</b></th>
                                <th><b>Course ID</b></th> -->
                                <th><b>Gender</b></th>
                                <th><b>Date of birth</b></th>
                                <th><b>Age</b></th>
                                <th><b>Phone</b></th>
                                <th><b>Address</b></th>
                                <th><b>Courses</b></th>
                                <th><b>Remove</b></th>
                            </tr>

                            <% for (var i=0; i < teacher.length; i++ ) { %>

                                <tr>
                                    <td>
                                        <%= teacher[i].teacherid %>
                                    </td>
                                    <td>
                                        <%= teacher[i].name %>
                                    </td>
                                    <td>
                                        <%= teacher[i].email %>
                                    </td>
                                    <td>
                                        <%= teacher[i].password %>
                                    </td>
                                    <td>
                                        <%= teacher[i].gender %>
                                    <td>
                                        <%= teacher[i].date %>
                                    </td>
                                    <td>
                                        <%= teacher[i].age %>
                                    </td>
                                    <td>
                                        <%= teacher[i].phone %>
                                    </td>
                                    <td>
                                        <%= teacher[i].address %>
                                    </td>
                                    <td>
                                        <form action="/adminlogin/adminallteachers/adminteachercourses" method="post">
                                            <input style="display: none;" type="text" , value="<%= teacher[i].teacherid %>" name="teacherid">
                                            <button type="submit" class="course">Courses</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form id="remove_teacher" action="" method="post">
                                            <input style="display: none;" type="text" , value="<%= teacher[i].teacherid %>" name="teacherid">
                                            <button onclick="aleart_function()" class="course">Remove</button>
                                        </form>
                                    </td>
                                </tr>

                            <% } %>

                        </table>
                    </div>
                `;

                console.log("removed")
            } else {
                console.log("hello ")
            }
        }
    </script>
</body>

</html>