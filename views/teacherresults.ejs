<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/studentattendence.css">
    <title>Qalam</title>
</head>

<body>

    <div id="mid" class="color">
        <img id="image" src="https://qalam.nust.edu.pk/odoocms_assets/static/img/logo.svg">
        <h3 id="title" class="Title">National University of Sciences & Technology</h3>
        <h1 id="title2" class="Title">NUST</h1>
        <form action="/teacherlogin" method="post">
            <button style="margin-top: -24px;" type="submit" id="backbtn">Back >> </button>
        </form>
    </div>
    <h1 id="results">Results</h1>

    <div id="subjects">

        <% for (var i=0; i < result.length; i++ ) { %>

            <div id="button_container">
                <form action="<%= url %>/courseid_<%= result[0].courseid %>/teacherresultsupload" method="post">
                    <input style="display: none;" type="text" , value="<%= result[i].courseid %>" name="courseid">
                    <button id="SN" type="submit">
                        <h3>
                            <%= result[i].coursename %>
                        </h3>
                    </button>
                </form>

                <form id="finish_form" action="<%= url %>/courseid_<%= result[i].courseid %>/finish" method="post">
                    <input style="display: none;" type="text" , value="<%= result[i].courseid %>" name="courseid">
                    <button onclick="aleart_function()" id="finish_button" type="submit">
                        <h3>
                            Finish
                        </h3>
                    </button>
                </form>
            </div>

        <% } %>

    </div>

    <script>
        function aleart_function() {
            let text = "Do you want to upload the grades?";
            if (confirm(text) == false) {
                document.getElementById("subjects").innerHTML = ` 
                    <div id="subjects">

                        <% for (var i=0; i < result.length; i++ ) { %>

                            <div id="button_container">
                                <form action="<%= url %>/courseid_<%= result[0].courseid %>/teacherresultsupload" method="post">
                                    <input style="display: none;" type="text" , value="<%= result[i].courseid %>" name="courseid">
                                    <button id="SN" type="submit">
                                        <h3>
                                            <%= result[i].coursename %>
                                        </h3>
                                    </button>
                                </form>

                                <form id="finish_form" action="" method="post">
                                    <input style="display: none;" type="text" , value="<%= result[i].courseid %>" name="courseid">
                                    <button onclick="aleart_function()" id="finish_button" type="submit">
                                        <h3>
                                            Finish
                                        </h3>
                                    </button>
                                </form>
                            </div>

                        <% } %>

                    </div>
                `;
            }
        }
    </script>

</body>

</html>